@model Hometask14.Models.Calculations

@{
    ViewBag.Title = "SolutionOfPolynom";
}

<h2>SolutionOfPolynom</h2>

@using (Html.BeginForm())
{
<p>
    ( @Html.TextBoxFor(m => m.NumberA) * (@Html.TextBoxFor(m => m.X1)^2))  +  ( @Html.TextBoxFor(m => m.NumberB) * @Html.TextBoxFor(m => m.X1) )  +  (  @Html.TextBoxFor(m => m.NumberC)  ) = @Html.DisplayTextFor(m => m.X2)
</p>

    <input type="submit" value="Get result" />
}